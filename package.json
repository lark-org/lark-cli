{
  "name": "@lark-org/lark-cli",
  "version": "1.2.0",
  "description": "快速创建 React 项目",
  "main": "lib/index.js",
  "author": "me@virgo.one",
  "license": "MIT",
  "keywords": [
    "react",
    "create-react-app",
    "cli",
    "typescript",
    "cra"
  ],
  "files": [
    "lib"
  ],
  "engines": {
    "node": "^12.0.0 || >= 14.0.0"
  },
  "scripts": {
    "start": "tsc -w",
    "build": "tsc",
    "lint": "yarn lint:code && yarn lint:format",
    "lint:code": "eslint src --ext .ts --fix",
    "lint:format": "prettier --write .",
    "prerelease": "npm run build",
    "release": "release-it",
    "preversion": "yarn lint",
    "prepare": "husky install"
  },
  "bin": {
    "lark": "./lib/index.js"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:lark-org/lark-cli.git"
  },
  "lint-staged": {
    "*.ts": "eslint src --fix",
    "**/*": "prettier -w -u"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "consolidate": "^0.16.0",
    "execa": "^5.1.1",
    "fs-extra": "^10.0.0",
    "handlebars": "^4.7.7",
    "metalsmith": "^2.3.0",
    "ora": "^5.3.0",
    "prompts": "^2.4.1",
    "readline": "^1.3.0",
    "yargs": "^17.1.1"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^3.3.0",
    "@tsconfig/node12": "^1.0.9",
    "@types/chalk": "^2.2.0",
    "@types/consolidate": "^0.14.1",
    "@types/execa": "^2.0.0",
    "@types/fs-extra": "^9.0.12",
    "@types/metalsmith": "^2.3.0",
    "@types/ora": "^3.2.0",
    "@types/prompts": "^2.0.14",
    "@types/yargs": "^17.0.2",
    "eslint": "^8.2.0",
    "eslint-config-lark": "^0.1.1",
    "husky": "^7.0.2",
    "lint-staged": "^12.0.2",
    "prettier": "^2.3.2",
    "release-it": "^14.11.5",
    "typescript": "^4.4.2"
  }
}
