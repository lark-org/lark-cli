{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "dist",
    "lib": ["es2017", "DOM"],
    "module": "commonjs",
    "target": "es6",
    "declaration": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "removeComments": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "resolveJsonModule": false,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "exclude": ["node_modules", "lib"]
}
