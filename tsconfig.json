{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./lib",
    "lib": ["es2017"],
    "module": "commonjs",
    "target": "es6",
    "declaration": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "removeComments": true,
    "sourceMap": false
  },
  "exclude": ["node_modules", "lib"]
}
